<%- include("../partials/admin/header") %>
<a href="/admin/user/add" class="btn btn-success" > <i class="fa fa-plus fa-2x">Add a new user</i></a><br><br>
<h3 style="color:green"><% var message %> <%= message %></h3>
<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>View</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% if(user.length <= 0){ %>
            <tr>
                <td colspan="3" style="text-align: center;">No user found!</td>
            </tr>
        <% }else{ %>
            <% user.forEach((each, index, array)=>{ %>
                <tr>
                    <td><%= each.username %></td>
                    <td><a href="<%= each.url %> " class="btn btn-success"><i class="fa fa-eye"></i></a></td>
                    <td><a href="/admin/user/delete/<%= each._id %>" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
                </tr>
            <% }) %>
            
        <% }%>
        
    </tbody>
</table>


<%- include("../partials/admin/footer") %>
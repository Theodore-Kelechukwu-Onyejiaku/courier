                            $.ajax({
                                headers: {
                                    'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
                                },
                                type: "POST",
                                url: "package/edit/22",
                                data: new FormData(this),
                                contentType: false,
                                cache: false,
                                processData: false,
                                beforeSend: function () {
                                    $('#spinner').show();
                                    $('button').attr('disabled', true);
                                },
                                success: function (data) {
                                    if (data) {
                                        $('#spinner').hide();
                                        $('button').removeAttr('disabled');
